- include_stylesheet 'admin/application'
%h1
  Guestbook Comments
#new-page
  %p
    = link_to "#{image_tag ("admin/icons-small/add.png")} Add New Guest Comment", '/admin/guestbooks/new'
- for guestbook in @guestbooks
  %h2.content-title
    = h guestbook.author
  .content-links
    %ul
      %li
        = link_to "#{image_tag ("admin/icons-small/edit.png", :border =>0, :title => 'Edit')}Edit", guestbook_edit_url(:id => guestbook.id)
      %li
        = link_to "#{image_tag ("admin/icons-small/delete.png", :border =>0, :title => 'Delete')}Delete", guestbook_remove_url(:id => guestbook.id), :confirm => "Are you sure?"
